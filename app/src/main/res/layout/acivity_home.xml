<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notice and reminders"
        android:id="@+id/home_notice_textview"
        android:layout_weight="0.37"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/home_home_button" />

    <Button
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:text="@string/string_home"
        android:id="@+id/home_home_button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/home_payable_button"
        android:layout_toStartOf="@+id/home_payable_button"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_payable"
        android:id="@+id/home_payable_button"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp"
        android:layout_below="@+id/home_notice_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>