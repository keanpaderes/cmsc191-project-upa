<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_rent"
        android:id="@+id/payable_rent_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/payable_electricity_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_electricity"
        android:id="@+id/payable_electricity_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_water"
        android:id="@+id/payable_water_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/payable_electricity_button"
        android:layout_toEndOf="@+id/payable_electricity_button" />

    <Button
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:text="home"
        android:id="@+id/button"
        android:layout_alignTop="@+id/button2"
        android:layout_alignRight="@+id/payable_electricity_button"
        android:layout_alignEnd="@+id/payable_electricity_button"
        android:layout_marginRight="68dp"
        android:layout_marginEnd="68dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="payable"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/payable_rent_button"
        android:layout_toEndOf="@+id/payable_rent_button"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unit here"
        android:id="@+id/list_unit"
        android:layout_below="@+id/payable_rent_button"
        android:layout_alignLeft="@+id/payable_rent_button"
        android:layout_alignStart="@+id/payable_rent_button"
        android:layout_toStartOf="@+id/button"
        android:layout_above="@+id/button"
        android:layout_alignRight="@+id/payable_water_button"
        android:layout_alignEnd="@+id/payable_water_button" />
</RelativeLayout>